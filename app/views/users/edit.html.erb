<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <h1 class="title">Edit user</h1>
      <%= simple_form_for(@user) do |f| %>
      <%= f.error_notification %>


      <% if @user.photo %>
        <%= cl_image_tag @user.photo.path, width: 200, height: 200, crop: :fill %>
      <% else %>
        <%= image_tag 'http://placehold.it/400x300', class: "avatar-square-huge"%>
      <% end %>
      <%= f.input :photo, as: :attachinary %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :sex, collection: User::SEX %>
      <%= f.input :address %>
      <%= f.input :city %>
      <%= f.input :zipcode %>
      <%= f.input :phone %>
      <%= f.input :specialty, collection: User::SPECIALTY %>
      <%= f.input :min_nb_consult %>
      <%= f.input :duration_consult %>
      <%= f.input :cardnumber %>
      <%= f.input :photo_id, as: :attachinary, label: "Carte d'identitÃ©" %>
      <%= f.input :photo_prof_doc, as: :attachinary, label: "Carte professionnelle" %>
      <%= f.submit "Enregistrer", class: 'secondary-btn' %>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div id="map" style="width: 100%; height: 600px;"></div>
        <% content_for(:after_js) do %>
          <%= javascript_tag do %>
            $(document).ready(function() {
              var handler = Gmaps.build('Google');
              handler.buildMap({ internal: { id: 'map' } }, function() {
                markers = handler.addMarkers(<%= raw @hash.to_json %>);
                handler.bounds.extendWith(markers);
                handler.fitMapToBounds();
                if (markers.length == 0) {
                  handler.getMap().setZoom(2);
                } else if (markers.length == 1) {
                  handler.getMap().setZoom(14);
                }
              });
            });
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

